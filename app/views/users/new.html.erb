<%= form_tag users_path do %>
<%= label_tag(:'user[name]', "Name")  %>
<%= text_field_tag :'user[name]'  %>
<br>
<%= label_tag(:'user[height]', "height (in inches)")  %>
<%= text_field_tag :'user[height]'  %>
<br>
<%= label_tag(:'user[happiness]', "How happy are you? (1-5 scale)")  %>
<%= number_field_tag :'user[happiness]', nil, min: 1, max: 5 %>
<br>
<%= label_tag(:'user[nausea]', "How nauseous are you? (1-5 scale)")  %>
<%= number_field_tag :'user[nausea]', nil, min: 1, max: 5 %>
<br>
<%= label_tag(:'user[tickets]', "How many tickets do you have?")  %>
<%= number_field_tag :'user[tickets]' %>
<br>

<%= label_tag(:'user[admin]', "Check box if you own this theme park")  %>
<%= check_box_tag :'user[admin]' %>
<br>

<%= label_tag(:'user[password]', "Password")  %>
<%= text_field_tag :'user[password]' %>
<br>
<%= submit_tag "Create User" %>
<% end %>


